<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" 
    android:background="@drawable/gamebg">

    <TextView
        android:id="@+id/score_field"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/time_field"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/scorelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/score_field"
        android:layout_below="@+id/score_field"
        android:gravity="center"
        android:text="@string/score_label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/timelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scorelabel"
        android:layout_alignBottom="@+id/scorelabel"
        android:layout_alignLeft="@+id/time_field"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/time_label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/levellabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_field"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/timelabel"
        android:layout_toRightOf="@+id/score_field"
        android:gravity="center"
        android:text="@string/level_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/levellabel"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/first_operand_view"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/operator_view"
        android:layout_width="30dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/first_operand_view"
        android:layout_toLeftOf="@+id/second_operand_view"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/equal_sign_view"
        android:layout_width="30dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/second_operand_view"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/equal_sign"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/second_operand_view"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/operator_view"
        android:layout_toLeftOf="@+id/equal_sign_view"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="22dp"
        android:gravity="center_vertical|center_horizontal" >

        <EditText
            android:id="@+id/answer_field"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:hint="@string/answer_here_label"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/submit_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/done" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/level"
        android:layout_marginTop="30dp"
        android:background="#000000"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/add_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/addition" />

        <ImageView
            android:id="@+id/subtract_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/subtraction" />

        <ImageView
            android:id="@+id/multiply_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/multiplication" />

        <ImageView
            android:id="@+id/divide_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/division" />

        <ImageView
            android:id="@+id/mixed_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/mixed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/dot1_imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="50dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/wrong" />

        <ImageView
            android:id="@+id/dot2_imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="50dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/wrong" />

        <ImageView
            android:id="@+id/dot3_imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="50dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/wrong" />

        <ImageView
            android:id="@+id/dot4_imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="50dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/wrong" />

        <ImageView
            android:id="@+id/dot5_imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/wrong" />
    </LinearLayout>

</RelativeLayout>